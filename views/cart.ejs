<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Product</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body style="background-color: #F39C12;">
  <h2 class="cart-container container" style= "color: #FFFFFF; background-color: transparent; border: 0 transparent; box-shadow: none;">Shopping Cart</h2>

  <div class="cart-container container">
    
    <% if (cart && cart.length > 0) { %>
      <% cart.forEach(item => { %>
        <!-- Cart Item  -->
        <div class="cart-item row align-items-center mb-4">
          <div class="col-md-6 d-flex align-items-center">
            <img src="<%= item.image %>" alt="Product Image" class="img-thumbnail" style="width: 100px;">
            <div class="ms-3">
              <p class="cart-item-title mb-1">Product 1</p>
              <p class="cart-item-price"><%= item.price %> Rs.</p>
            </div>
          </div>
          <div class="col-md-6 d-flex justify-content-end align-items-center">
            <form action="/editCart/<%= item.id %>" method="post" class="d-flex align-items-center">
              <input class="cart-quantity-input me-3 form-control" type="number" name="quant" value="<%= item.quantity %>" min="1">
              <button type="submit" class="btn btn-warning">Edit </button>
            </form>
            <form action="/removeCart/<%= item.id %>" method="post" class="ms-3">
              <button type="submit" class="btn btn-danger">Remove</button>
            </form>
          </div>
        </div>
      <% }) %>
      
      <!-- Total Price -->
      <div class="cart-total text-end fs-4 fw-bold mb-4">
        Total: <%= totalPrice.toFixed(2) %> Rs.
      </div>
      
      <!-- Checkout Button -->
      <div class="text-end">
        <form action="/checkout" method="get">
          <button type="submit" class="checkout-button btn btn-success">Proceed to Checkout</button>
        </form>
      </div>
    
    <% } else { %>
      <h4>Nothing in your cart</h4>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
