<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="/styles/header.css" rel="stylesheet"> 
</head>
<body>

  <div id="header-section">
    <!-- Header content -->
    <header class="p-3 mb-3">
      <div class="container-fluid d-flex align-items-center justify-content-between">
        <!-- Logo and Brand -->
        <div class="d-flex align-items-center">
          <a href="/" class="d-flex align-items-center text-decoration-none">
            <img src="/images/bag-fill.svg" class="bi me-2" width="40" height="32" role="img" />
            <h1 class="logo">ShopSphere</h1>
          </a>
          <nav class="ms-4">
            <ul class="nav">
              <li class="nav-item"><a href="/" class="nav-link px-2">Home</a></li>
              <li class="nav-item"><a href="/cart" class="nav-link px-2">Cart</a></li>
              <%if(locals.role && (role==="seller" || role==="Seller")){%>
              <li class="nav-item"><a href="/add-product" class="nav-link px-2">Add Products</a></li>
               <%}%>
            </ul>
          </nav>
        </div>

        <!-- Profile Icon -->
        <a href="/profile" class="profile-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#FFFFFF" class="bi bi-person-circle" viewBox="0 0 16 16">
            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
          </svg>
        </a>
      </div>
    </header>

    <!-- Content -->
    <div id="content" class="p-4">
      <p class="slogan">Where Shopping Revolves Around You!</p>
      <form role="search">
        <div class="input-group">
          <input id="searchInput" type="search" class="form-control search" placeholder="Search..." aria-label="Search" name="search">
          <span class="input-group-text"><i class="fas fa-search"></i></span>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
